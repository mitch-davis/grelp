    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1"> 
            <%= "#{@reviews["reviews"][0]["rating"]} star review by #{@reviews["reviews"][0]["user"]["name"]}" %></a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse in">
      <div class="panel-body"></div>
    </div> <%= "#{@reviews["reviews"][0]["text"]}" %> </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1"> 
            <%= "#{@reviews["reviews"][1]["rating"]} star review by #{@reviews["reviews"][1]["user"]["name"]}" %></a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse in">
      <div class="panel-body"></div>
    </div> <%= "#{@reviews["reviews"][1]["text"]}" %> </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1"> 
            <%= "#{@reviews["reviews"][2]["rating"]} star review by #{@reviews["reviews"][2]["user"]["name"]}" %></a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse in">
      <div class="panel-body"></div>
    </div> <%= "#{@reviews["reviews"][2]["text"]}" %> </div>
  </div>
</div>
</div>
</body>
</html>