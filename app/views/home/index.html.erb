

<head>
  <script src="//maps.google.com/maps/api/js?v=3key=AIzaSyCMPe5C0yTvu9AGXdeFSD-AIwo5eilQUis"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js" type='text/javascript'></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <%= javascript_include_tag :application %>
</head>

<div style='width: 100%; height: 400px'>
  <div id="map" style='width: 100%; height: 100%;'></div>
</div>

<script>
  
  var handler = Gmaps.build('Google');
  var position;
  
  handler.buildMap(
    {
      provider: {
        disableDefaultUI: true, // pass in other Google Maps API options here
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        //styles: mapStyle
      },
      internal: {id: 'map'}
    },
  
    function(){
      if(navigator.geolocation) //If we can get their location, set their location
      {
        position = navigator.geolocation.getCurrentPosition(displayUserOnMap);
      }
      else // If we can't set their location, just simulate it
      {
        position = { lat: 38.8943, lng: 104.8025}; //Default User location is UCCS
        displayUserOnMap(position)
      }
      
      //Show UCCS and Zero
      var markers = handler.addMarkers([ { lat: 38.904813, lng: -104.819010}, { lat: 0, lng: 0 } ]);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds(); 
    }
  );
  
  function buildMarker(latitude, longitude, pictureUrl, InfoWindow)
  {
    var buildMarker = {
      lat: latitude,
      lng: longitude,
      picture: {
        url: pictureUrl,
        width: 36,
        height: 36
      },
      infowindow: InfoWindow
    }
  }
  
  function displayMarkerOnMap(position){
    var marker = handler.addMarkers([ {
      lat: position.coords.latitude,
      lng: position.coords.logitude,
      picture: {
        url: "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
        width: 36,
        height: 36
      },
      infowindow: "Test Info Window"
    } ]); 
    
    //handler.bounds.extendWith(marker);
    //fitMapToBounds();
  }
  
  function displayUserOnMap(position){
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude
    });
    
    handler.map.centerOn(marker);
    fitMapToBounds();
  };
  
</script>