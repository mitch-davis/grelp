<div class = "container" style=" padding-top: 50px">
  <h1>Create A New Deal</h1>
  <%= form_tag deals_path do %>
  <div class="container">
        <div class="form-group">
      <label for="sel1">Select a Restaurant ID:</label>
      <select class="form-control" style="height: 5%" id="sel1">
        <% @nearby["businesses"].each do |rest| %>
          <option> <%= rest["id"] %> </option>
        <% end %>
      </select>
  </div>
    <div class="form-group">
      <label for="rest">Restaurant Name:</label>
      <input type="text" class="form-control" id="rest">
    </div>
    <div class="form-group">
      <label for="deal">Deal Name:</label>
      <input type="text" class="form-control" id="deal">
    </div>
    <div class="form-group">
      <label for="desc">Deal Description:</label>
      <input type="text" class="form-control" id="desc">
    </div>
    <div class="form-group">
      <label for="exp">Expiration Date:</label>
      <input type="text" class="form-control" id="exp">
    </div>
    <div class="form-group">
      <label for="re">Restrictions:</label>
      <input type="text" class="form-control" id="re">
    </div>
    <div class="form-group">
      <label for="code">Offer Code:</label>
      <input type="text" class="form-control" id="code">
    </div>
  <% end %>
  </div>
</div>